generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  super_admin
  entity_admin
  cred_specialist
  provider
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      Role     // Required for all users
  status    String   @default("pending")
  createdAt DateTime @default(now())

  entityId  String?   // Nullable only for super_admin
  entity    Entity?   @relation(fields: [entityId], references: [id])
}

model Entity {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  users     User[]
  invites   InviteToken[]
}

model InviteToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  role      Role
  entity    Entity   @relation(fields: [entityId], references: [id])
  entityId  String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}
